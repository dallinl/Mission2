@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalcModel;

<!--Create a Grade Calculator-->
<h2> Grade Calculator </h2>
<p> Input the percentage of points earned for each section</p>
<form method="post">
    <label> Assignments </label>
    <input id='Assignments' type="number" asp-for="Assignments" min ="0" max ="100"/> <br /> <p> (Max: 55%)</p>
    <label> Group Projects</label>
    <input id='Projects' type="number" asp-for="Projects" min ="0" max ="100" /> <br /> <p> (Max: 5%) </p>
    <label> Quizzes </label>
    <input id='Quizzes' type="number" asp-for="Quizzes" min ="0" max ="100"/> <br /> <p> (Max: 10%) </p>
    <label> Exams </label>
    <input id='Exams' type="number" asp-for="Exams" min ="0" max ="100"/> <br /> <p> (Max: 20%) </p>
    <label> INTEX </label>
    <input id='INTEX' type="number" asp-for="INTEX" min ="0" max ="100"/> <br /> <p> (Max: 10%) </p>
    <input id="btnSend" type="submit" value="Calculate"/>
</form>

<script src="~/js/calculator.js"></script>

<div asp-validation-summary="All"> </div>

